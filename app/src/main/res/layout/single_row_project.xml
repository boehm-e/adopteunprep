<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="16dp"
    android:padding="16dp"
    card_view:cardBackgroundColor="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Project category"
            android:id="@+id/projectCategory"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Project Title"
            android:id="@+id/projectTitle"
            android:layout_below="@+id/projectCategory"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="date begin"
            android:id="@+id/dateBegin"
            android:layout_below="@+id/projectTitle"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="date end"
            android:id="@+id/dateEnd"
            android:layout_alignTop="@+id/dateBegin"
            android:layout_toEndOf="@+id/dateBegin"
            android:layout_marginStart="12dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>