<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:id="@+id/lyt_container"
    android:background="#848484">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff">
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/notifPicture"
            android:layout_gravity="left|center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:id="@+id/notifLogin"
            android:background="@android:color/white"
            android:layout_gravity="left|center_vertical"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/notifPicture"
            android:text="Login" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:id="@+id/notifDescription"
            android:background="@android:color/white"
            android:layout_gravity="right|center_vertical"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/notifUe"
            android:text="description" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:id="@+id/notifUe"
            android:background="@android:color/white"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/notifLogin"
            android:text="ue" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="3"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/txt_delete"
            android:gravity="center_vertical"
            android:text="DELETED"
            android:clickable="false"
            android:layout_weight="2"
            android:hapticFeedbackEnabled="true"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/txt_undo"
            android:text="UNDO"
            android:clickable="false"
            android:layout_weight="1"
            android:textColor="#d9bf00"/>

    </LinearLayout>



</RelativeLayout>