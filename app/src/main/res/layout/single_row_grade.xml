<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:padding="16dp"
    android:layout_margin="16dp">

    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="name of ue"
            android:id="@+id/gradeUeName"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="grade of ue"
            android:id="@+id/gradeUeGrade"
            android:layout_alignBottom="@+id/gradeUeName"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines = "3"
            android:text="commentaire"
            android:id="@+id/gradeUeComment"
            android:layout_below="@+id/gradeUeName"
            android:layout_alignEnd="@+id/gradeUeGrade" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
